<UserControl x:Class="WpfApp1.Components.ItemsComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Components"
             xmlns:views="clr-namespace:WpfApp1.MVVM.Views"
             xmlns:viewModels="clr-namespace:WpfApp1.MVVM.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="itemsComponent">

    <UserControl.Resources>
        <DataTemplate DataType="{x:Type viewModels:Items}">
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding ChangeSelected, ElementName=itemsComponent}"
                        CommandParameter="{Binding}">Settings</Button>
                <TextBox Text="{Binding ItemsName}" Width="100"/>
                <TextBox Text="{Binding ItemsType}" Width="100"/>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <ItemsControl ItemsSource="{Binding Items, ElementName=itemsComponent}" />

</UserControl>
